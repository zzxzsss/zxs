
-- Maintenance Message Script
-- Shows users that script is temporarily unavailable

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")

local Player = Players.LocalPlayer

-- Configuration
local DISCORD_URL = "https://discord.gg/PaRYpmJ4cG"

-- UI Theme
local Theme = {
    Background = Color3.fromRGB(25, 25, 35),
    DarkBackground = Color3.fromRGB(20, 20, 30),
    AccentColor = Color3.fromRGB(255, 165, 0), -- Orange for warning
    AccentHover = Color3.fromRGB(255, 185, 50),
    DiscordColor = Color3.fromRGB(88, 101, 242),
    DiscordHover = Color3.fromRGB(108, 121, 262),
    TextColor = Color3.fromRGB(255, 255, 255),
    SecondaryText = Color3.fromRGB(180, 180, 180),
    BorderColor = Color3.fromRGB(60, 60, 80),
    WarningColor = Color3.fromRGB(255, 193, 7)
}

-- Utility Functions
local function createCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 8)
    corner.Parent = parent
    return corner
end

local function createStroke(parent, color, thickness)
    local stroke = Instance.new("UIStroke")
    stroke.Color = color or Theme.BorderColor
    stroke.Thickness = thickness or 1
    stroke.Parent = parent
    return stroke
end

local function tweenButton(button, hoverColor, normalColor)
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = hoverColor}):Play()
    end)

    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = normalColor}):Play()
    end)

    button.MouseButton1Down:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {Size = button.Size - UDim2.new(0, 4, 0, 2)}):Play()
    end)

    button.MouseButton1Up:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {Size = button.Size + UDim2.new(0, 4, 0, 2)}):Play()
    end)
end

-- Create Maintenance Message UI
local function createMaintenanceUI()
    -- Remove any existing UI
    if CoreGui:FindFirstChild("MaintenanceMessage") then
        CoreGui:FindFirstChild("MaintenanceMessage"):Destroy()
    end

    -- Main ScreenGui
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "MaintenanceMessage"
    screenGui.ResetOnSpawn = false
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    local success, error = pcall(function()
        screenGui.Parent = CoreGui
    end)
    
    if not success then
        screenGui.Parent = Player:WaitForChild("PlayerGui")
    end

    -- Blur effect
    local blur = Instance.new("BlurEffect")
    blur.Size = 10
    blur.Parent = game.Workspace.CurrentCamera

    -- Main Frame
    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 500, 0, 450)
    mainFrame.Position = UDim2.new(0.5, -250, 0.5, -225)
    mainFrame.BackgroundColor3 = Theme.Background
    mainFrame.BorderSizePixel = 0
    mainFrame.Parent = screenGui
    createCorner(mainFrame, 12)
    createStroke(mainFrame, Theme.BorderColor, 2)

    -- Add shadow effect
    local shadow = Instance.new("ImageLabel")
    shadow.Name = "Shadow"
    shadow.Size = UDim2.new(1, 30, 1, 30)
    shadow.Position = UDim2.new(0, -15, 0, -15)
    shadow.BackgroundTransparency = 1
    shadow.Image = "rbxassetid://6014261993"
    shadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    shadow.ImageTransparency = 0.5
    shadow.ScaleType = Enum.ScaleType.Slice
    shadow.SliceCenter = Rect.new(49, 49, 450, 450)
    shadow.ZIndex = -1
    shadow.Parent = mainFrame

    -- Header
    local header = Instance.new("Frame")
    header.Size = UDim2.new(1, 0, 0, 80)
    header.Position = UDim2.new(0, 0, 0, 0)
    header.BackgroundColor3 = Theme.DarkBackground
    header.BorderSizePixel = 0
    header.Parent = mainFrame
    createCorner(header, 12)

    -- Fix header corners (only top corners)
    local headerFix = Instance.new("Frame")
    headerFix.Size = UDim2.new(1, 0, 0.5, 0)
    headerFix.Position = UDim2.new(0, 0, 0.5, 0)
    headerFix.BackgroundColor3 = Theme.DarkBackground
    headerFix.BorderSizePixel = 0
    headerFix.Parent = header

    -- Warning Icon
    local warningFrame = Instance.new("Frame")
    warningFrame.Size = UDim2.new(0, 50, 0, 50)
    warningFrame.Position = UDim2.new(0, 15, 0, 15)
    warningFrame.BackgroundColor3 = Theme.WarningColor
    warningFrame.BorderSizePixel = 0
    warningFrame.Parent = header
    createCorner(warningFrame, 8)

    local warningIcon = Instance.new("TextLabel")
    warningIcon.Size = UDim2.new(1, 0, 1, 0)
    warningIcon.BackgroundTransparency = 1
    warningIcon.Text = "‚ö†Ô∏è"
    warningIcon.TextColor3 = Theme.Background
    warningIcon.TextScaled = true
    warningIcon.Font = Enum.Font.SourceSansBold
    warningIcon.Parent = warningFrame

    -- Title
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, -80, 0, 35)
    title.Position = UDim2.new(0, 75, 0, 15)
    title.BackgroundTransparency = 1
    title.Text = "SCRIPT MAINTENANCE"
    title.TextColor3 = Theme.WarningColor
    title.TextSize = 24
    title.Font = Enum.Font.SourceSansBold
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = header

    -- Subtitle
    local subtitle = Instance.new("TextLabel")
    subtitle.Size = UDim2.new(1, -80, 0, 20)
    subtitle.Position = UDim2.new(0, 75, 0, 45)
    subtitle.BackgroundTransparency = 1
    subtitle.Text = "Temporarily Unavailable"
    subtitle.TextColor3 = Theme.SecondaryText
    subtitle.TextSize = 14
    subtitle.Font = Enum.Font.SourceSans
    subtitle.TextXAlignment = Enum.TextXAlignment.Left
    subtitle.Parent = header

    -- Content Area
    local contentFrame = Instance.new("Frame")
    contentFrame.Size = UDim2.new(1, -40, 1, -120)
    contentFrame.Position = UDim2.new(0, 20, 0, 90)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = mainFrame

    -- Main Message
    local mainMessage = Instance.new("TextLabel")
    mainMessage.Size = UDim2.new(1, 0, 0, 100)
    mainMessage.Position = UDim2.new(0, 0, 0, 0)
    mainMessage.BackgroundTransparency = 1
    mainMessage.Text = "üîß Script is currently under maintenance\n\n‚è∞ Please try again tomorrow\n\nüí¨ For updates and support, join our Discord server"
    mainMessage.TextColor3 = Theme.TextColor
    mainMessage.TextSize = 16
    mainMessage.Font = Enum.Font.SourceSans
    mainMessage.TextWrapped = true
    mainMessage.TextYAlignment = Enum.TextYAlignment.Top
    mainMessage.Parent = contentFrame

    -- Status Container
    local statusContainer = Instance.new("Frame")
    statusContainer.Size = UDim2.new(1, 0, 0, 60)
    statusContainer.Position = UDim2.new(0, 0, 0, 120)
    statusContainer.BackgroundColor3 = Theme.DarkBackground
    statusContainer.BorderSizePixel = 0
    statusContainer.Parent = contentFrame
    createCorner(statusContainer, 8)
    createStroke(statusContainer, Theme.BorderColor)

    -- Status Text
    local statusText = Instance.new("TextLabel")
    statusText.Size = UDim2.new(1, -20, 1, 0)
    statusText.Position = UDim2.new(0, 10, 0, 0)
    statusText.BackgroundTransparency = 1
    statusText.Text = "üîÑ Maintenance in Progress\nüìÖ Expected completion: Tomorrow"
    statusText.TextColor3 = Theme.SecondaryText
    statusText.TextSize = 14
    statusText.Font = Enum.Font.SourceSans
    statusText.TextWrapped = true
    statusText.Parent = statusContainer

    -- Button Container
    local buttonContainer = Instance.new("Frame")
    buttonContainer.Size = UDim2.new(1, 0, 0, 45)
    buttonContainer.Position = UDim2.new(0, 0, 0, 200)
    buttonContainer.BackgroundTransparency = 1
    buttonContainer.Parent = contentFrame

    -- Discord Button
    local discordBtn = Instance.new("TextButton")
    discordBtn.Size = UDim2.new(0.65, 0, 1, 0)
    discordBtn.Position = UDim2.new(0, 0, 0, 0)
    discordBtn.BackgroundColor3 = Theme.DiscordColor
    discordBtn.BorderSizePixel = 0
    discordBtn.Text = "üí¨ Join Discord Server"
    discordBtn.TextColor3 = Theme.TextColor
    discordBtn.TextSize = 16
    discordBtn.Font = Enum.Font.SourceSansBold
    discordBtn.Parent = buttonContainer
    createCorner(discordBtn, 8)
    tweenButton(discordBtn, Theme.DiscordHover, Theme.DiscordColor)

    -- Close Button
    local closeBtn = Instance.new("TextButton")
    closeBtn.Size = UDim2.new(0.3, -10, 1, 0)
    closeBtn.Position = UDim2.new(0.7, 10, 0, 0)
    closeBtn.BackgroundColor3 = Theme.AccentColor
    closeBtn.BorderSizePixel = 0
    closeBtn.Text = "‚úï Close"
    closeBtn.TextColor3 = Theme.TextColor
    closeBtn.TextSize = 16
    closeBtn.Font = Enum.Font.SourceSansBold
    closeBtn.Parent = buttonContainer
    createCorner(closeBtn, 8)
    tweenButton(closeBtn, Theme.AccentHover, Theme.AccentColor)

    -- Additional Info
    local additionalInfo = Instance.new("TextLabel")
    additionalInfo.Size = UDim2.new(1, 0, 0, 60)
    additionalInfo.Position = UDim2.new(0, 0, 0, 260)
    additionalInfo.BackgroundTransparency = 1
    additionalInfo.Text = "‚ÑπÔ∏è We're working hard to improve the script experience\nüéØ New features and bug fixes coming soon!\nüôè Thank you for your patience"
    additionalInfo.TextColor3 = Color3.fromRGB(100, 200, 255)
    additionalInfo.TextSize = 12
    additionalInfo.Font = Enum.Font.SourceSans
    additionalInfo.TextWrapped = true
    additionalInfo.Parent = contentFrame

    -- Button Functions
    discordBtn.MouseButton1Click:Connect(function()
        -- Copy Discord link to clipboard
        if setclipboard then
            setclipboard(DISCORD_URL)
            discordBtn.Text = "‚úÖ Discord Link Copied!"
            
            game:GetService("StarterGui"):SetCore("SendNotification", {
                Title = "Discord Link Copied",
                Text = "üìã Discord invite link copied to clipboard!",
                Duration = 3
            })
            
            task.wait(2)
            discordBtn.Text = "üí¨ Join Discord Server"
        else
            game:GetService("StarterGui"):SetCore("SendNotification", {
                Title = "Manual Copy Required",
                Text = "Please visit: " .. DISCORD_URL,
                Duration = 5
            })
        end
    end)

    closeBtn.MouseButton1Click:Connect(function()
        blur:Destroy()
        screenGui:Destroy()
    end)

    -- Auto-close after 30 seconds
    task.spawn(function()
        for i = 30, 1, -1 do
            task.wait(1)
            closeBtn.Text = "‚úï Close (" .. i .. ")"
        end
        closeBtn.Text = "‚úï Auto-Closing..."
        task.wait(1)
        blur:Destroy()
        screenGui:Destroy()
    end)

    -- Show notification
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Script Maintenance",
        Text = "‚ö†Ô∏è Script is temporarily unavailable. Join Discord for updates!",
        Duration = 5
    })

    print("üîß Maintenance message displayed successfully!")
end

-- Initialize maintenance UI
createMaintenanceUI()
